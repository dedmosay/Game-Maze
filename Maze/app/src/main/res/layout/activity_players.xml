<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PLAYERS">

    <Button
        android:id="@+id/Id_User"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:background="#C0E4F1"
        android:text="ОПЫТНЫЙ"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textCursorDrawable="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595" />

    <Button
        android:id="@+id/Id_Normal"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="207dp"
        android:layout_height="42dp"
        android:background="#C0E4F1"
        android:text="МАСТЕР"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

    <Button
        android:id="@+id/Id_Hard"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:background="#C0E4F1"
        android:text="ПРОФЕССИОНАЛ"
        android:textColorLink="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Id_Normal"
        app:layout_constraintVertical_bias="0.181" />
</android.support.constraint.ConstraintLayout>