<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RECORDS">

    <TextView
        android:id="@+id/Id_userresult"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_above="@+id/Id_normalresult"
        android:layout_alignParentEnd="true"
        android:text="0" />


    <TextView
        android:id="@+id/Id_normalresult"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_above="@+id/Id_hardresult"
        android:layout_alignParentEnd="true"
        android:text="0" />


    <TextView
        android:id="@+id/Id_hardresult"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="0" />

    <TextView
        android:id="@+id/USER"
        android:layout_width="149dp"
        android:layout_height="43dp"
        android:layout_below="@+id/Id_userresult"
        android:layout_toStartOf="@+id/Id_userresult"
        android:text="МАСТЕР"
        tools:text="МАСТЕР" />


    <TextView
        android:id="@+id/NORMAL"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/Id_userresult"
        android:layout_toStartOf="@+id/Id_userresult"
        android:text="ОПЫТНЫЙ"
        tools:text="ОПЫТНЫЙ" />

    <TextView
        android:id="@+id/HARD"
        android:layout_width="149dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Id_userresult"
        android:text="ПРОФЕССИОНАЛ"
        tools:text="ПРОФЕССИОНАЛ" />

</RelativeLayout>